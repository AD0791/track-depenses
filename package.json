{
  "name": "track-depenses",
  "version": "1.0.0",
  "engines": {
    "node": "12.x",
    "yarn": "1.x"
  },
  "description": "MESN Stack",
  "main": "server.js",
  "author": "Alexandro Disla",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "build": "yarn --cwd ./client/  && yarn --cwd ./client/ build",
    "heroku-postbuild": "yarn --cwd ./client/  && yarn --cwd ./client/ build",
    "server": "nodemon server.js --ignore `client/`",
    "client": "yarn --cwd ./client/ dev  ",
    "dev:mode": "concurrently \"yarn run server\" \"yarn run client\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.7",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}